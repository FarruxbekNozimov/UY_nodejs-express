<div class="container-fluid position-relative d-flex p-0">

	<!-- Sidebar Start -->
	{{> adminSidebar}}
	<!-- Sidebar End -->

	<!-- Content Start -->
	<div class="content">
		<!-- Navbar Start -->
		{{> adminNavbar}}
		<!-- Navbar End -->

		<!-- Table Start -->
		<div class="container-fluid pt-4 px-4">
			<div class="row g-4">
				<div class="col-sm-12 col-xl-12">
					<div class="bg-secondary rounded h-100 p-4">
						<h4 class="mb-4 text-center">All Users</h4>
						<table class="table table-dark table-hover table-responsive">
							<thead>
								<tr>
									<th scope="col">Image</th>
									<th scope="col">Full Name</th>
									<th scope="col">Email</th>
									<th scope="col">Password</th>
									<th scope="col">Role</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								{{#allUsers}}
									<tr>
										<td>
											<a href="">
												<img src="{{image}}" alt="userImage" width="100" height="100" style="border-radius:50px;">
											</a>
										</td>

										{{#ifequal role "owner"}}
											<td>{{tableCutter firstName}} {{tableCutter lastName}} üåü</td>
										{{else ifequal role "admin"}}
											<td>{{tableCutter firstName}} {{tableCutter lastName}} ‚≠êÔ∏è</td>
										{{else}}
											<td>{{tableCutter firstName}} {{tableCutter lastName}} üí´</td>
										{{/ifequal}}

										{{#checkOwner role @root.admin.role}}
											<td>{{email}}</td>
											<td>{{password}}</td>
										{{else}}
											<td>*******</td>
											<td>********</td>
										{{/checkOwner}}
										<td>{{role}}</td>
										<td >
												{{#checkOwner role @root.admin.role}}
												<a href="/admin/users/{{_id}}" type="button" class="btn btn-warning mb-1 w-100"><i class="fa fa-eye"></i></a>
												<div class="d-flex gap-1">
													<a href="/admin/users/edit/{{_id}}" type="button" class="btn btn-success w-50">
													<i class="fa fa-pen"></i>
													</a>
													<form action="/admin/users/delete/{{_id}}" method="POST" class="w-50">
														<button type="submit" class="btn btn-primary w-100"><i class="fa fa-trash"></i></button>
													</form>
												</div>
												{{else}}
													<a type="button" class="btn btn-info w-100 h-100"><i class="fa fa-lock"></i></a>
												</div>
												{{/checkOwner}}
										</td>
									</tr>
								{{/allUsers}}
							</tbody>
						</table>
					</div>
				</div>	
			</div>
		</div>
		<!-- Table End -->

		<!-- Footer Start -->
		{{> adminFoot}}
		<!-- Footer End -->
	</div>
	<!-- Content End -->

	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
			class="bi bi-arrow-up"
		></i></a>
</div>