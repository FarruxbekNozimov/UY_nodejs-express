<div class="d-flex gap-4 card-product">
	<div class="product-image" style="background-image:url({{product.image}})">
	</div>
	<div class="right w-50">
		<div class="avatar d-flex gap-3 align-items-center">
			<img src="{{product.user.image}}" alt="" />
			<div class="about">
				<p class="m-0 fs-4 text-dark">{{product.user.firstName}}
					{{product.user.lastName}}</p>
			</div>
		</div>
		<br />
		<p class="fs-1 m-0"> {{product.title}}</p>
		<b class="text-danger"> {{formatDate product.createdAt 2}}</b>
		<p class="fw-bold m-0 text-dark"> {{product.price}}.00 $</p>
		<p class="mt-3"> {{product.description}}</p>

	</div>
</div>